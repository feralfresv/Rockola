<script>

    function btnSearch()
    {
        $.ajax(
            {
                url: '@Url.Action("BuscarLista")?palabra=' + $('#txtkey').val(),
                type: 'GET',
                success: function (result) {
                    $('#YoutubeLista').html(result);
                    //respuesta
                }
            });
    }
</script>